<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingEnd="12dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/texViewWeight"
                android:layout_width="151dp"
                android:layout_height="match_parent"
                android:paddingTop="15dp"
                android:text="Your weight in kg:"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="0dp" />

            <EditText
                android:id="@+id/txtWeight"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/btnRunningModeStart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:height="70dp"
                android:paddingTop="25dp"
                android:text="Start" />


            <TextView
                android:id="@+id/textViewDistance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="25dp"
                android:text="Total distance:"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/txtTotalDistance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" 0 km"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="25sp"
                tools:layout_editor_absoluteX="126dp"
                tools:layout_editor_absoluteY="0dp" />


            <TextView
                android:id="@+id/textViewCalories"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="25dp"
                android:text="Burned calories:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtCalories"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0 kcal"
                android:textSize="25sp" />


            <Button
                android:id="@+id/btnShowRoute"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:text="Show last route" />

            <Button
                android:id="@+id/btnShowRunningHistory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:text="Show history" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>

